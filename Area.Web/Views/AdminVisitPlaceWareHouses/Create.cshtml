@model Area.Data.VisitPlaceWareHouse

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class="icon-user"></i>
            <h3>-</h3>
        </div>
        <div class="widget-content">
            <div class="tabbable">
                <div class="tab-content">
                    <div class="tab-pane active" id="formcontrols">


                        @using (Html.BeginForm("Create", "AdminVisitPlaceWareHouses", FormMethod.Post, new { @id = "edit-profile", @class = "form-horizontal" }))
                        {

                            <div class="control-group">
                                <label class="control-label" for="quantity">Visit Id</label>
                                <div class="controls">
                                    @Html.DropDownList("VisitPlaceID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.VisitPlaceID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Depo Id</label>
                                <div class="controls">
                                    @Html.DropDownList("WareHouseID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.WareHouseID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Check in Date</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CheckinDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CheckinDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity"> Check in Latitude</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CheckinLatitude, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CheckinLatitude, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Check in Longitude</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CheckinLongitude, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CheckinLongitude, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Check out Date</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CheckoutDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CheckoutDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Oluşturma Tarihi</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label" for="note">Durumu</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.IsActive)
                                </div>
                            </div>

                            @Html.ActionLink("Listeye Geri Dön", "Index", new { htmlAttributes = new { @class = "form-control" } })
                            <button type="submit" class="btn btn-primary pull-right two">Kaydet</button>

                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>