@model Area.Data.User
@using Area.Data;
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    B2DriveForPostEntities db = new B2DriveForPostEntities();
    List<Permission> permList = db.Permissions.ToList();
}

<div class="span12">
    <div class="widget ">
        <div class="widget-header">
        </div>
        <div class="widget-content">
            <div class="tabbable">
                <div class="tab-content">
                    <div class="tab-pane active" id="formcontrols">
                        @using (Html.BeginForm("Create", "AdminUsers", FormMethod.Post, new { @id = "edit-profile", @class = "form-horizontal" }))
                        {

                            <fieldset>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">İsim</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Soyisim</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Numara</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">E-Mail Adresi</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.MailAddress, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Kullanıcı Adı</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Şifre</label>
                                    <div class="controls">
                                        <input type="password" name="password" value="" class="form-control" autocomplete="off" min="6" required />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Yetkilendirme</label>
                                    <div class="controls">
                                        <select name="permission">
                                            @foreach (var item in permList)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            } 
                                        </select>
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="note">Durumu</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.IsActive)
                                    </div>
                                </div>

                                @Html.ActionLink("Listeye Geri Dön", "Index")
                                <button type="submit" class="btn btn-primary pull-right two">Kaydet</button>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


