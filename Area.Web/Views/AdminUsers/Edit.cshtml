@model Area.Data.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class="icon-user"></i>
            <h3>Güncelle - @Html.DisplayFor(model => model.UserName)</h3>
        </div>
        <div class="widget-content">
            <div class="tabbable">
                <div class="tab-content">
                    <div class="tab-pane active" id="formcontrols">
                        @using (Html.BeginForm("Edit", "AdminUsers", FormMethod.Post, new { @id = "edit-profile", @class = "form-horizontal" }))
                        {

                            <fieldset>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">İsim</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Soyisim</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Numara</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">E-Mail Adresi</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.MailAddress, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label" for="quantity">Kullanıcı Adı</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                
                                <div class="control-group">
                                    <label class="control-label" for="note">Durumu</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.IsActive)
                                    </div>
                                </div>

                                @Html.ActionLink("Listeye Geri Dön", "Index")
                                <button type="submit" class="btn btn-primary pull-right two">Güncelle</button>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>