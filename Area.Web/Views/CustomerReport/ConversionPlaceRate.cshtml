@using Area.Data;
@using ExportImplementation;
@using System.IO;
@using System.Diagnostics;
@model IEnumerable<Area.Data.GetConversionPlaceRate_Result>
@{
    ViewBag.Title = "DifferentPlace";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var startDate = this.Request.QueryString["startdate"];
    var endDate = this.Request.QueryString["enddate"];
    var placeID = this.Request.QueryString["placeid"];
    var export = this.Request.QueryString["export"];

    DayOfWeek day = DateTime.Now.DayOfWeek;
    int days = day - DayOfWeek.Monday;
    DateTime start = DateTime.Now.AddDays(-days);
    DateTime end = start.AddDays(6);
    if (!string.IsNullOrEmpty(startDate) && !string.IsNullOrEmpty(endDate))
    {
        start = Convert.ToDateTime(startDate);
        end = Convert.ToDateTime(endDate);
    }
    B2DriveForPostEntities db = new B2DriveForPostEntities();
    var placeList = db.Places.OrderBy(p => p.Name).ToList();

    var productCategoryList = db.ProductCategories.Where(p => p.ID != 2).OrderBy(p => p.Name).ToList();
    var productSubCategoryList = db.ProductSubCategories.Where(p => p.CategoryID != 2).OrderBy(p => p.Name).ToList();


    List<Area.Data.GetConversionPlaceRate_Result> resultData = Model.ToList();
    try
    {
        if (!string.IsNullOrEmpty(export) && export == "excel")
        {

            var exportData = new ExportExcel2007<GetConversionPlaceRate_Result>();
            var data = exportData.ExportResult(resultData);
            File.WriteAllBytes("conversionanduks.xlsx", data);
            Process.Start("conversionanduks.xlsx");

        }
        else if (!string.IsNullOrEmpty(export) && export == "pdf")
        {
            var exportData = new ExportPdfiTextSharp4<GetConversionPlaceRate_Result>();
            var data = exportData.ExportResult(resultData);
            File.WriteAllBytes("conversionanduks.pdf", data);
            Process.Start("conversionanduks.pdf");
        }
    }
    catch (Exception ex)
    {
    }


}
<div class="span12">
    <div class="widget widget-table action-table">
        <div class="widget-header  widget-header-st  Fourinput-ST">
            <form class="filterForm">
                <div class="container">
                    <div class="row">

                        <div class="span3">
                            <h5>Başlangıç Tarihi</h5>
                            <div class="controls datetimepicker1">
                                <span class="add-on">
                                    <input type="text" name="startdate" class="form-control" id="datetimepicker1" value="@start" autocomplete="off" />
                                </span>
                            </div>
                        </div>


                        <div class="span3">
                            <h5>Bitiş Tarihi</h5>
                            <div class="container">
                                <div class="controls datetimepicker1">
                                    <span class="add-on">
                                        <input type="text" name="enddate" class="form-control" id="datetimepicker2" value="@end" autocomplete="off" />
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <h5>Mekanlar</h5>
                            <select name="place">
                                <option value="0">Tüm Mekanlar</option>
                                @foreach (var item in placeList)
            {
                    <option value="@item.ID">@item.Name</option>
}
                            </select>
                        </div>

                        <div class="span3">
                            <h5>Ürün</h5>
                            <select name="CategoryID">
                                <option value="0">Tüm Ürünler</option>
                                @foreach (var item in productCategoryList)
            {
                    <option value="@item.ID">@item.Name</option>
}
                            </select>
                        </div>

                        <div class="span3">
                            <h5>Ürün alt Kategori</h5>
                            <select name="SubCategoryID">
                                <option value="0">Tüm Alt Ürünler</option>
                                @foreach (var item in productSubCategoryList)
            {
                    <option value="@item.ID">@item.Name</option>
}
                            </select>
                        </div>

                        <div class="span3 filterBtnArea withExcel">
                            <button type="submit" class="btn btn-primary">Filtrele</button>
                            <a href="?export=excel" class="btn btn-warning" >Excel'e Çıkar</a>
                            <a href="?export=pdf" class="btn btn-warning">Pdf'e Çıkar</a>
                        </div>
                       
                    </div>
                </div>



            </form>
        </div>
        <!-- /widget-header -->
        <div class="widget-header">
            <h3 style="float:right;margin-top:8px;color:#00ba8b">Mekan Bazlı Conversion</h3>
        </div>
        <div class="widget-content">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Mekan Adı
                        </th>
                        <th>
                            Etkinlik Sayısı
                        </th>
                        <th>
                            Litre
                        </th>
                        <th>
                            Etklinlik başı Conversion Ortalama
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in resultData)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountPlace)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Liter)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
