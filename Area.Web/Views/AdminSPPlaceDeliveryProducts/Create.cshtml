@model Area.Data.SPPlaceDeliveryProduct

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class="icon-user"></i>
            <h3>-</h3>
        </div>
        <div class="widget-content">
            <div class="tabbable">
                <div class="tab-content">
                    <div class="tab-pane active" id="formcontrols">

                        @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                Visit Place Id
                                <div class="col-md-10">
                                    @Html.DropDownList("SupervisorVisitPlaceID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SupervisorVisitPlaceID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                               Ürün Adı
                                <div class="col-md-10">
                                    @Html.DropDownList("ProductID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Miktar
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Not
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Oluşturma Tarihi
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label" for="note">Durumu</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.IsActive)
                                </div>
                            </div>

                            @Html.ActionLink("Listeye Geri Dön", "Index", new { htmlAttributes = new { @class = "form-control" } })
                            <button type="submit" class="btn btn-primary pull-right two">Kaydet</button>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>