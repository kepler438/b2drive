@model Area.Data.SupervisorVisitPlace

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class="icon-user"></i>
            <h3>-</h3>
        </div>
        <div class="widget-content">
            <div class="tabbable">
                <div class="tab-content">
                    <div class="tab-pane active" id="formcontrols">

                        @using (Html.BeginForm())
                        {

                        <fieldset>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Visit Id</label>
                                <div class="controls">
                                    @Html.DropDownList("VisitPlaceID", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Parent Id</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.ParentVisitPlaceID, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Personal İsmi</label>
                                <div class="controls">
                                    @Html.DropDownList("PersonID", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Bölge Adı</label>
                                <div class="controls">
                                    @Html.DropDownList("PlaceID", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Başlangıç Tarihi</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Bitiş Tarihi</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Check In Date</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CheckinDate, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Check In Latitude</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CheckinLatitude, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Check In Longitude</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CheckinLongitude, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Bölge Pozitif Yorumları</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.PlacePositiveComment, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Bölge Negatif Yorumları</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.PlaceNegativeComment, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label" for="quantity">Onay</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.IsApproved)
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="quantity">Başlangıç Tarihi</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label" for="note">Durumu</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.IsActive)
                                </div>
                            </div>

                            @Html.ActionLink("Listeye Geri Dön", "Index", new { htmlAttributes = new { @class = "form-control" } })
                            <button type="submit" class="btn btn-primary pull-right two">Kaydet</button>

                        </fieldset>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
