@model Area.Data.VisitPlaceCarInfo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class="icon-user"></i>
            <h3>-</h3>
        </div>
        <div class="widget-content">
            <div class="tabbable">
                <div class="tab-content">
                    <div class="tab-pane active" id="formcontrols">

                        @using (Html.BeginForm())
                        {

                        <fieldset>
                            <div class="form-group">
                                Visit Id
                                <div class="col-md-10">
                                    @Html.DropDownList("VisitPlaceID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.VisitPlaceID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Araç Kiralama Id
                                <div class="col-md-10">
                                    @Html.DropDownList("RentACarID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.RentACarID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Araba Alma Noktası
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarReceivePoint, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CarReceivePoint, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Araba Teslim Noktası
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarDeliveryPoint, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CarDeliveryPoint, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Arabanın Alındığı Tarih
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarReceiveDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CarReceiveDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Araba Teslim Tarihi
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarDeliveryDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CarDeliveryDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Araç Markası
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarBrandName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CarBrandName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Araba Modeli
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarModelName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CarModelName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Check in Date
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CheckinDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CheckinDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Check in Latitude
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CheckinLatitude, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CheckinLatitude, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Check in Longitude
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CheckinLongitude, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CheckinLongitude, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Check out Date
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CheckoutDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CheckoutDate, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Oluşturma Tarihi
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label" for="note">Durumu</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.IsActive)
                                </div>
                            </div>


                            @Html.ActionLink("Listeye Geri Dön", "Index", new { htmlAttributes = new { @class = "form-control" } })
                            <button type="submit" class="btn btn-primary pull-right two">Kaydet</button>
                        </fieldset>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
