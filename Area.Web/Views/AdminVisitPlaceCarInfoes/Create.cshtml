@model Area.Data.VisitPlaceCarInfo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="span12">
    <div class="widget ">
        <div class="widget-header">
            <i class="icon-user"></i>
            <h3>-</h3>
        </div>
        <div class="widget-content">
            <div class="tabbable">
                <div class="tab-content">
                    <div class="tab-pane active" id="formcontrols">

                        @using (Html.BeginForm("Create", "AdminVisitPlaceCarInfoes", FormMethod.Post, new { @id = "edit-profile", @class = "form-horizontal" }))
                        {
                        <fieldset>
                            <input type="hidden" name="VisitPlaceID" value="@Url.RequestContext.RouteData.Values["id"]" />
                            
                            <div class="form-group">
                                Araç Kiralama Firması
                                <div class="col-md-10">
                                    @Html.DropDownList("RentACarID", null, htmlAttributes: new { @class = "form-control" }) 
                                </div>
                            </div>

                            <div class="form-group">
                                Araba Alma Noktası
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarReceivePoint, new { htmlAttributes = new { @class = "form-control" } }) 
                                </div>
                            </div>

                            <div class="form-group">
                                Araba Teslim Noktası
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarDeliveryPoint, new { htmlAttributes = new { @class = "form-control" } }) 
                                </div>
                            </div>

                            <div class="form-group">
                                Arabanın Alınacaği Tarih
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarReceiveDate, new { htmlAttributes = new { @class = "form-control datepicker" } }) 
                                </div>
                            </div>

                            <div class="form-group">
                                Araba Teslim Tarihi
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarDeliveryDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                    
                                </div>
                            </div>

                            <div class="form-group">
                                Araç Markası
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarBrandName, new { htmlAttributes = new { @class = "form-control" } }) 
                                </div>
                            </div>

                            <div class="form-group">
                                Araba Modeli
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CarModelName, new { htmlAttributes = new { @class = "form-control" } }) 
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label" for="note">Durumu</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.IsActive)
                                </div>
                            </div>
                            <a href="/adminsupervisorvisit" class="form-control">Listeye Geri Dön</a>
                            <button type="submit" class="btn btn-primary pull-right two">Kaydet</button>
                        </fieldset>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 